function reverse(x: number): number {
    let sign;
    if(x>=0){
         sign =1;
    }
    else{
       sign = -1;
    }
    x=x*sign;
    let res=0;
    while(x>0){
        res=(res*10)+x%10;
        x=Math.floor(x/10);
        if (res > 2**31 - 1) return 0;
    }
    return res*sign;
    /*let min_value = -2147483648
    let max_value = 2147483647
    
    let sign = x >= 0 ? 1 : -1;
    let reversed = parseInt(x.toString().split('').reverse().join(''));

    let result = reversed * sign;
    if(result < min_value || result > max_value) return 0;
    return result;*/

};
